<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu toggle
    const mobileToggle = document.getElementById('hs-header-classic-collapse');
    const mobileMenu = document.getElementById('hs-header-classic');
    
    if (mobileToggle && mobileMenu) {
      mobileToggle.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
        const isExpanded = !mobileMenu.classList.contains('hidden');
        mobileToggle.setAttribute('aria-expanded', isExpanded.toString());
      });
    }

    // Services dropdown
    const servicesButton = document.getElementById('hs-services-dropdown');
    const servicesMenu = servicesButton?.nextElementSibling;
    
    if (servicesButton && servicesMenu) {
      servicesButton.addEventListener('click', function(e) {
        e.preventDefault();
        const isOpen = !servicesMenu.classList.contains('hidden');
        
        if (isOpen) {
          servicesMenu.classList.add('hidden');
          servicesMenu.classList.remove('opacity-100');
          servicesButton.setAttribute('aria-expanded', 'false');
        } else {
          servicesMenu.classList.remove('hidden');
          servicesMenu.classList.add('opacity-100');
          servicesButton.setAttribute('aria-expanded', 'true');
        }
      });

      // Close dropdown when clicking outside
      document.addEventListener('click', function(e) {
        if (!servicesButton.contains(e.target as Node) && !servicesMenu.contains(e.target as Node)) {
          servicesMenu.classList.add('hidden');
          servicesMenu.classList.remove('opacity-100');
          servicesButton.setAttribute('aria-expanded', 'false');
        }
      });
    }
  });
</script>
