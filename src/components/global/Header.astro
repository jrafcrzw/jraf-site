---
// src/components/Header.astro
---

<header class="sticky h-12 top-4 inset-x-0 flex flex-wrap md:justify-start md:flex-nowrap z-50 w-full before:absolute before:inset-0 before:max-w-5xl before:mx-2 lg:before:mx-auto before:rounded-[10px] before:bg-neutral-800/30 before:backdrop-blur-md">
  <nav class="relative max-w-5xl w-full flex flex-wrap md:flex-nowrap basis-full items-center justify-between py-2 ps-5 pe-2 md:py-0 mx-2 lg:mx-auto rounded-[10px]">
    <!-- Logo -->
    <div class="flex items-center">
      <div class="text-xl font-heading text-white hover:text-neutral-300 tracking-wider">JRAF.w</div>
    </div>
    <!-- End Logo -->

    <!-- Contact Button -->
    <div class="md:order-3 flex items-center gap-x-3">
      <div class="md:ps-3">
        <a class="group inline-flex items-center gap-x-2 py-2 px-3 bg-seagreen hover:bg-racing font-medium text-sm text-nowrap text-seasalt rounded-[10px] focus:outline-hidden" href="#contact">
          Contact us
        </a>
      </div>

      <!-- Hamburger Button -->
      <div class="md:hidden">
        <button
          type="button"
          class="size-9 flex justify-center items-center text-sm font-semibold rounded-[10px] bg-neutral-800 text-white disabled:opacity-50 disabled:pointer-events-none"
          id="mobile-menu-toggle"
          aria-expanded="false"
          aria-controls="mobile-menu"
          aria-label="Toggle navigation"
        >
          <svg class="hamburger-icon shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor"><line x1="3" x2="21" y1="6" y2="6"/><line x1="3" x2="21" y1="12" y2="12"/><line x1="3" x2="21" y1="18" y2="18"/></svg>
          <svg class="close-icon hidden shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
        </button>
      </div>
    </div>
    <!-- End Contact Button + Hamburger -->

    <!-- Collapsible Nav -->
    <div id="mobile-menu" class="hidden overflow-hidden transition-all duration-300 basis-full grow md:block md:bg-transparent bg-neutral-800/30 backdrop-blur-md rounded-[10px] mt-2 md:mt-0" aria-labelledby="mobile-menu-toggle">
      <div class="flex flex-col md:flex-row md:items-center md:justify-end gap-y-3 py-2 md:py-0 md:ps-7">
        <a class="px-3 py-2 text-sm text-white hover:text-neutral-300 rounded-[10px]" href="#">Home</a>
        <a class="px-3 py-2 text-sm text-white hover:text-neutral-300 rounded-[10px]" href="#services">Services</a>
        <a class="px-3 py-2 text-sm text-white hover:text-neutral-300 rounded-[10px]" href="#about">About</a>
      </div>
    </div>
    <!-- End Collapsible Nav -->
  </nav>
</header>

<!-- relative path to script at `src/scripts/hamburger-menu.js` -->
<script is:inline src="/src/scripts/hamburger-menu.js"></script>